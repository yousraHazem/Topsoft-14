<!-- This view adds the subject , body and receipent labels , and the send message button -->
<!-- Author: Ali A. El-Halawaty .-->
<%= form_for @message do |form| %>
  <%= form.label :recepient %>
  <%= form.text_field :recepient %>
  <%= form.label :subject %>
  <%= form.text_field :subject %>
  <%= form.label :body %>
  <%= form.text_area :body %><br>
  <%= form.submit 'Send message' %>
<% end %>

