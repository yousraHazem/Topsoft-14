<%= form_for(@new_survey) do |f| %>
  <% if @new_survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@new_survey.errors.count, "error") %> prohibited this new_survey from being saved:</h2>

      <ul>
      <% @new_survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name  %><br>
    <%= f.text_field :name %>
  </div>
  
  <%= f.fields_for :questions do |ff| %>
    <div class="field">
      <%= render 'question_fields', :f => ff %>
    </div>
  <% end %>
  
  <p><%= link_to_add_fields "Add Question", f, :questions %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

