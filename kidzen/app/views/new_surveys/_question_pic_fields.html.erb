<div class="fields">
  <p>
    <%= f.label :content, "Question pic" %>
    <%= link_to_remove_fields "remove", f %><br />
    <%= f.text_area :content %><br />
  </p>

  <%= f.fields_for :pic_models do |ff| %>
    <div class="field">
      <%= render 'pic_model_fields', :f => ff %>
    </div>
  <% end %>
  <p><%= link_to_add_fields "Add pic answer", f, :pic_models %></p>
</div>