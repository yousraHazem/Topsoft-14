 <!-- Here is the main page that showes the posts with comments
      Author : Abdelrahman Saad -->
 <h1>Listing posts</h1>
 <div id="postsAjax">
   <%= render partial: "form" %>
 </div>
 <% @posts.each do |c| %>
     <% @post = c %>
     <%= render :partial => @post %>
 <% end %>

<!-- This checks if the user is not a supervisor to be able to post-->
<!-- Authors: Shary Beshara -->
 <% if !Supervisor.exists?(registered_user: @user) %>
 	<%= link_to 'New Post', new_post_path %>
 <% end %>

