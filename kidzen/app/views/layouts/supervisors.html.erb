      <%= link_to "English", change_locale_path(locale: :en), class: "round_inner" %>
    </div>
  </div>
  <br/>
  <div id="alert_container">
    <% flash.each do |key, value| %>
      <div class="flash flash-<%= key %>">
        <%= value %>
      </div>
    <% end %>      
  </div>
  <div id="main_content">
