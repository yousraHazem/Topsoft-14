<!DOCTYPE html>
<html>
<head>
  <title>Kidzen</title>
      <%= stylesheet_link_tag("general.css") %>
      <%= yield :stylesheet_includes %>
      <%= yield :javascript_includes %>
    <%= csrf_meta_tags %>
</head>
<body>
   <% if signed_in? %>
     Logged in as <strong><%= current_user.email %></strong>.b>
     <%= link_to 'Inbox', messages_path  %> |
     <%= link_to 'Send message', new_message_path  %> | 
       <% end %>
  <div class="locale_button">
    <div class="round_button">
      <%= link_to "Arabic", change_locale_path(locale: :ar), class: "round_inner" %>
    </div>
    <div class="round_button">
      <%= link_to "English", change_locale_path(locale: :en), class: "round_inner" %>
    </div>
  </div>
  <br/>

  <div id="alert_container">
      <% flash.each do |key, value| %>
        <div class="flash flash-<%= key %>">
          <%= value %>
        </div>
      <% end %>      
  </div>
  <%= yield %>

  <%= link_to "Sign out", signout_path, method: "delete" %>
  <%= link_to "Profile", current_user %>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
